{% extends 'adminbase.html.twig' %}

{% block title %}Ajouter une question{% endblock %}

{% block body %}
    <h1>Ajouter une nouvelle question</h1>



    {{ form_start(questionForm) }}

    {{ form_row(questionForm.value, { 'attr': {'class': 'form-control'} }) }}
    {{ form_row(questionForm.goodAnswer, { 'attr': {'class': 'form-control'} }) }}
    {{ form_row(questionForm.wrongAnswerOne, { 'attr': {'class': 'form-control'} }) }}
    {{ form_row(questionForm.wrongAnswerTwo, { 'attr': {'class': 'form-control'} }) }}
    {{ form_row(questionForm.wrongAnswerThree, { 'attr': {'class': 'form-control'} }) }}
    {{ form_row(questionForm.category, { 'attr': {'class': 'form-control'} }) }}
    <button class="btn" type="submit">Ajouter</button>
    {{ form_end(questionForm) }}

{% endblock %}