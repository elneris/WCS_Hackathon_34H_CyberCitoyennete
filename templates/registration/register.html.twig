{% extends 'adminbase.html.twig' %}

{% block title %}Ajouter un élève{% endblock %}

{% block body %}
    <h1>Ajouter un nouvel élève</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, { 'attr': {'class': 'form-control'}})  }}
        {{ form_row(registrationForm.lastname, { 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.class, { 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'register-form'}}) }}

        <button class="btn">Ajouter</button>

    {{ form_end(registrationForm) }}
{% endblock %}
